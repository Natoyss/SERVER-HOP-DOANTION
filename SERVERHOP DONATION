repeat
    task.wait()
until game:IsLoaded()

-- Stops script if on a different game
if game.PlaceId ~= 8737602449 and game.PlaceId ~= 8943844393 then
    return
end

local CoreGui = game:GetService("CoreGui")
local Players = game:GetService("Players")
local HttpService = game:GetService("HttpService")
local TPService = game:GetService("TeleportService")
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local Workspace = game:GetService("Workspace")

-- Create a function to hop servers
local function hopToServer()
    local success, message = pcall(function()
        -- Get a list of servers
        local servers = ReplicatedStorage:WaitForChild("ServerInstances"):GetChildren()
        
        -- If there are servers, teleport to a different one
        if #servers > 0 then
            local randomServer = servers[math.random(1, #servers)]
            TPService:TeleportToPlaceInstance(game.PlaceId, randomServer.PlaceId)
        else
            warn("No servers found.")
        end
    end)
    
    if not success then
        warn("Error during server hop: " .. tostring(message))
    end
end

-- Check for server hop button or activation
local button = Instance.new("TextButton")
button.Size = UDim2.new(0, 200, 0, 50)
button.Position = UDim2.new(0.5, -100, 0.5, -25)
button.Text = "Hop to Server"
button.TextColor3 = Color3.fromRGB(255, 255, 255)
button.BackgroundColor3 = Color3.fromRGB(0, 122, 255)
button.Parent = CoreGui

button.MouseButton1Click:Connect(hopToServer)
